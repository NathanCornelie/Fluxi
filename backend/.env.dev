# Variables d'environnement pour le développement Fluxi
# À charger avec : docker-compose --env-file .env.dev up

# Base de données PostgreSQL
POSTGRES_DB=fluxi_dev
POSTGRES_USER=fluxi
POSTGRES_PASSWORD=fluxi
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# PgAdmin
PGADMIN_DEFAULT_EMAIL=dev@fluxi.com
PGADMIN_DEFAULT_PASSWORD=fluxi123

# RabbitMQ
RABBITMQ_DEFAULT_USER=fluxi
RABBITMQ_DEFAULT_PASS=fluxi
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=fluxi

# Application Spring Boot
SPRING_PROFILES_ACTIVE=dev
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/fluxi_dev
SPRING_DATASOURCE_USERNAME=fluxi
SPRING_DATASOURCE_PASSWORD=fluxi

# Logging
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_FLUXI=DEBUG